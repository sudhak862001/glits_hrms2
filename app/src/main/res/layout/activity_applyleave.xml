<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:id="@+id/ll1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:backgroundTint="#7ab4a5"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:id="@+id/llCalender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_5dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/btn_byfullday"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:layout_margin="5dp"
                    android:textColor="#fff"
                    android:background="@color/fullday"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Full Days" />
                <TextView
                    android:id="@+id/btn_byhalfday"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_margin="5dp"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/halfday"
                    android:layout_height="match_parent"
                    android:text="Half Day" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40dp"
                android:id="@+id/ll_fulldays"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">
                <Spinner
                    android:visibility="gone"
                    android:id="@+id/sp_type"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_height="wrap_content">
                </Spinner>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_fromdate"
                    android:layout_width="match_parent"
                    app:boxBackgroundMode="outline"
                    android:textColorHint="@color/white"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_fromdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_from_date"
                        android:layout_marginLeft="15dp"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textSize="@dimen/textview_size"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_todate"
                    android:layout_width="match_parent"
                    app:boxBackgroundMode="outline"
                    android:textColorHint="@color/white"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_todate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/to_date"
                        android:textColorHint="#4c4c4c"
                        android:layout_marginLeft="15dp"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textSize="@dimen/textview_size"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    app:boxBackgroundMode="outline"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_Subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/subject"
                        android:textColorHint="#4c4c4c"
                        android:layout_marginLeft="15dp"
                        android:paddingTop="10dp"
                        android:inputType="text"
                        android:textSize="@dimen/textview_size"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    app:boxBackgroundMode="outline"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Leave Reason"
                        android:inputType="textMultiLine"
                        android:textColorHint="@color/white"
                        android:layout_marginLeft="15dp"
                        android:minLines="5"
                        android:textSize="@dimen/textview_size"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    app:boxBackgroundMode="outline"
                    android:textColorHint="@color/white"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_Remarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Remarks"
                        android:minLines="3"
                        android:textColorHint="#4c4c4c"
                        android:layout_marginLeft="15dp"
                        android:inputType="text"
                        android:textSize="@dimen/textview_size"
                        android:textColor="#000"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="40dp"
                android:id="@+id/ll_halfday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_date"
                    android:layout_width="match_parent"
                    app:boxBackgroundMode="outline"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Date"
                        android:layout_marginLeft="15dp"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textSize="@dimen/textview_size"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_fromtime"
                    android:layout_width="match_parent"
                    app:boxBackgroundMode="outline"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_fromtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_from_time"
                        android:textColorHint="#4c4c4c"
                        android:layout_marginLeft="15dp"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textSize="@dimen/textview_size"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_totime"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    app:boxBackgroundMode="outline"
                    android:textColorHint="@color/white"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_totime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/to_time"
                        android:textColorHint="#4c4c4c"
                        android:layout_marginLeft="15dp"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textSize="@dimen/textview_size"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    app:boxBackgroundMode="outline"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_hSubject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/subject"
                        android:textColorHint="#4c4c4c"
                        android:layout_marginLeft="15dp"
                        android:paddingTop="10dp"
                        android:inputType="text"
                        android:textSize="@dimen/textview_size"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    app:boxBackgroundMode="outline"
                    android:textColorHint="@color/white"
                    android:visibility="visible"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_hdescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Enter Leave Reason"
                        app:boxBackgroundMode="outline"
                        android:textColorHint="@color/white"
                        android:inputType="textMultiLine"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:minLines="5"
                        android:textSize="@dimen/textview_size"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    app:boxBackgroundMode="outline"
                    android:textColorHint="@color/white"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_hRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Remarks"
                        android:minLines="3"
                        android:textColorHint="#4c4c4c"
                        android:layout_marginLeft="15dp"
                        android:inputType="text"
                        android:textSize="@dimen/textview_size"
                        android:textColor="#000"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1_1"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/button_bg"
        android:backgroundTint="@null"
        android:fontFamily="@font/poppinsmedium"
        android:text="Apply"
        android:textColor="@color/white"
        app:backgroundTint="@null" />
</RelativeLayout>