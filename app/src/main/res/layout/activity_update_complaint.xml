<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_update_complaint"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/toolbar_update"
        android:background="@color/colorPrimaryDark"
        app:titleTextColor="@color/white"/>
    <ScrollView
        android:id="@+id/scroll_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_update">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/titel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/CenturyGothic_regular_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:text="Update Complaint"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/in_empname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/green"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_background" />

                <TextView
                    android:id="@+id/complaint_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Poor Signal"
                    android:textColor="@color/green"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/spinnerbackground"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Complaint"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/compl_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5dp"
                        android:layout_marginLeft="25dp"
                        android:text=""
                        android:textColor="@color/green"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/view_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/spinnerbackground"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Date Created "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/datecreated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5dp"
                        android:layout_marginLeft="25dp"
                        android:text=""
                        android:textColor="@color/green"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="@dimen/_5dp"
                        android:background="@color/view_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/spinnerbackground"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="Complaint Status "
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/sp_pending_complaints"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom|left"
                        android:layout_weight="1.5"

                        android:fontFamily="@font/montserrat"
                        android:gravity="bottom|left"
                        android:padding="@dimen/_5dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/spinnerdropdown"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/section_inventory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text=" Is hardware removed"
                            android:textSize="12sp" />

                        <CheckBox
                            android:id="@+id/cb_ishardwareremoved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/used_inventory"
                            android:textSize="12sp" />

                        <CheckBox
                            android:id="@+id/check_used_inventory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_ishardwareremovedimages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/ll_img_hardware"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <Button
                                android:id="@+id/btnimg_hardware"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:onClick="captureImage3"
                                android:text="@string/Capture_Image"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:theme="@style/AppTheme.Button"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/Imageprev_hardware"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginLeft="15dp"
                                android:visibility="visible" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_hardware"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/add"
                                android:visibility="gone"
                                app:backgroundTint="@color/fabcolor" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_img1_hardware"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <Button
                                android:id="@+id/btnimg_hardware"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:onClick="captureImage4"
                                android:text="@string/Capture_Image"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:theme="@style/AppTheme.Button" />

                            <ImageView
                                android:id="@+id/Imageprev1_hardware"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginLeft="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_img2_hardware"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <Button
                                android:id="@+id/btnimg_hardware"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:onClick="captureImage5"
                                android:text="@string/Capture_Image"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:theme="@style/AppTheme.Button" />

                            <ImageView
                                android:id="@+id/Imageprev2_hardware"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginLeft="15dp" />

                        </LinearLayout>

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/view_background"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/sub_section_inventory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <Spinner
                                android:id="@+id/select_inventory"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/montserrat" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="0.5">

                                <EditText
                                    android:id="@+id/used_qty"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_weight="0.5"
                                    android:fontFamily="@font/montserrat"
                                    android:hint="Used Qty"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:textColor="@color/green" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:id="@+id/ismaterialused"
                        android:visibility="gone"
                        android:background="@drawable/button_background"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_add_24"/>

                        <TextView
                            android:id="@+id/addinfo"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="ADD INVENTORY" />
                    </LinearLayout>

<!--                    <Button-->
<!--                        android:id="@+id/ismaterialused"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Add Inventory"-->
<!--                        android:layout_margin="10dp"-->
<!--                        android:visibility="gone"-->
<!--                        android:padding="10dp"/>-->

                    <LinearLayout
                        android:id="@+id/li_metersused"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/montserrat"
                            android:text="Used Meters"
                            android:textSize="16dp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_reading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/Quality1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat"
                                android:hint="Start Reading"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/Quality2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat"
                                android:hint="End Reading"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/et_result"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:hint="result"
                            android:visibility="gone" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_serialno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:hint="Enter Serial number"
                            android:textSize="18sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_no_of_inventories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"/>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_background"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/lissuefound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/spinnerbackground"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/issuefound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Issue Found "
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/sp_closed_complaints"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/spinnerdropdown"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_background"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/Add_complaints_definition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rremarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/complaints_Remarks"
                        android:textSize="14sp"
                        app:fontFamily="@font/montserrat" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_layout_user_name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <EditText
                            android:id="@+id/Add_complaints"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:fontFamily="@font/montserrat"
                            android:hint="Enter Complaints Remarks .."
                            android:imeOptions="actionNext"
                            android:inputType="textPostalAddress"
                            android:padding="10dp"
                            android:textColor="@color/green"
                            android:textSize="18sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_background"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="@dimen/_5dp"
                        android:onClick="captureImage"
                        android:text="@string/Capture_Image"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="visible"
                        android:id="@+id/btnimg"
                        android:theme="@style/AppTheme.Button" />

                    <ImageView
                        android:id="@+id/Imageprev"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="15dp"
                        android:scaleType="centerCrop"
                        android:visibility="visible" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_background"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/sub1_section_inventory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/select_inventory1"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp">

                            <EditText
                                android:id="@+id/used_qty1"
                                style="@style/CenturyGothic_regular_font"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@style/CenturyGothic_regular_font"
                                android:hint="Used Qty"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:textColor="@color/green"
                                android:visibility="gone" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5dp"
                            android:padding="@dimen/_5dp"
                            android:onClick="captureImage1"
                            android:background="#598F59"
                            android:text="@string/Capture_Image"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:theme="@style/AppTheme.Button" />

                        <ImageView
                            android:id="@+id/Imageprev1"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="15dp"
                            android:scaleType="centerCrop"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/delete1"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:text="Delete"
                            android:textColor="@color/colorAccent"
                            android:textSize="10dp"
                            android:theme="@style/AppTheme.Button"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_background"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/sub2_section_inventory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/select_inventory2"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/montserrat"
                            android:visibility="gone" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp">

                            <EditText
                                android:id="@+id/used_qty2"
                                style="@style/CenturyGothic_regular_font"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@style/CenturyGothic_regular_font"
                                android:hint="Used Qty"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:textColor="@color/green"
                                android:visibility="gone" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >

                        <Button
                            android:id="@+id/btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5dp"
                            android:padding="@dimen/_5dp"
                            android:onClick="captureImage2"
                            android:text="@string/Capture_Image"
                            android:textColor="@color/white"
                            android:background="@color/orange"
                            android:textSize="12dp"
                            android:theme="@style/AppTheme.Button"
                            />

                        <ImageView
                            android:id="@+id/Imageprev2"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="15dp"
                            android:scaleType="centerCrop"
                            />

                        <Button
                            android:id="@+id/delete2"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:text="Delete"
                            android:textColor="@color/colorAccent"
                            android:textSize="10dp"
                            android:theme="@style/AppTheme.Button"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/tvPaymentName"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/titel"
                android:layout_centerHorizontal="true"
                android:onClick="submit"

                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:theme="@style/AppTheme.Button" />
        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/tvPaymentName"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="71dp"
        android:src="@drawable/add"
        app:backgroundTint="@color/fabcolor" />

    <!--<include layout="@layout/sign_out"/>-->
</RelativeLayout>
