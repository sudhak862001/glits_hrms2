<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_update_complaint"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:gravity="center"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/c_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tejayslogo"
            android:layout_gravity="center"

            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_power_settings_new_24"
            android:id="@+id/imagelogout"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="@dimen/_15dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/login_image1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="@dimen/_15dp"
                android:background="@drawable/button2_back"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_person_24" />

            <ImageView
                android:id="@+id/uploadimage1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="220dp"
                android:layout_marginBottom="@dimen/_15dp"
                android:src="@drawable/ic_baselineb_camera_alt_24"


                />
        </RelativeLayout>
<!--        <Button-->
<!--            android:layout_width="250dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:textColor="@color/white"-->
<!--            android:id="@+id/uploadimage1"-->
<!--            android:textSize="@dimen/_15dp"-->
<!--            android:layout_marginBottom="60dp"-->
<!--            android:layout_marginTop="60dp"-->
<!--           android:background="@drawable/button1_back"-->
<!--            android:text="@string/Capture_Image1"-->
<!--            />-->

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_15dp"
            android:id="@+id/upload_btn"
            android:visibility="visible"
            android:layout_marginTop="50dp"
            android:background="@drawable/button1_back"
            android:text="@string/Capture_Image1"
            />
    </LinearLayout>

</LinearLayout>